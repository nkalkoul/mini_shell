{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MinShell",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/minishell",//"/usr/bin/env",
            "args": [
            //    "-i",
              //  "${workspaceFolder}/minishell"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
